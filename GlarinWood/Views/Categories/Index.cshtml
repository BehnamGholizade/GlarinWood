@model IEnumerable<GlarinWood.Models.Category>

@{
    ViewData["Title"] = "گروه محصولات";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>گروه محصولات</h2>

<div >
    <a asp-action="Create" class="btn btn-lg btn-info">ایجاد گروه محصولات</a>
</div>
<br />
<hr />
   

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
