  
@{
    ViewData["Title"] = "صفحه پرداخت";
    Layout = "_Layout";
}
@{
    //decimal QTYPrice = 0;
}
<form method="post" asp-action="Pay" asp-controller="ShoppingCart">


    <div class="container">

       

         <div class="panel panel-success" style="text-align:center;">
            <div class="panel panel-heading">
                <h3> @ViewData["Message"] </h3>

            </div>
            <div class="panel panel-body">
                <script style="text-align:center" src="https://www.zarinpal.com/webservice/TrustCode" type="text/javascript"></script>
                <br />
                <span><span dir="rtl">@string.Format("{0:#,##0 ريال}", @ViewData["SumCountPrice"])</span></span>&nbsp;<span>:مبلغ قابل پرداخت</span>

                <div class="panel panel-footer">

                    <div class="proceed-button" style="text-align:center;">
                         <button type="submit" class="btn btn-success" asp-route-price="@ViewData["SumCountPrice"]">پرداخت</button>
                    </div>
                </div>
            </div>
        </div>
     </div>
 
</form>