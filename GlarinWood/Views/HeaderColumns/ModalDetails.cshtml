@model GlarinWood.Models.HeaderColumn

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-body">
            <button type="button" class="close myclose" data-dismiss="modal">&times;</button>
            <br/>
            <h4 style="text-align:center;">سر ستون</h4>
            <hr />
            <div class="product-details1-area">
                <div class="product-details-info-area">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="inner-product-details-left">
                                <div class="tab-content">
                                   
                                    <div id="related1" class="tab-pane fade active in">


                                        <a class="zoom ex1" href="#"><img class="img-responsive" src="~/metro/img/product/AllProductImage/ProductColumn/@Model.Image" alt="single"></a>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" dir="rtl">
                         
                            <div class="inner-product-details-right">
                                <ul>
                                    <li><i aria-hidden="true" class="fa fa-star"></i></li>
                                    <li><i aria-hidden="true" class="fa fa-star"></i></li>
                                    <li><i aria-hidden="true" class="fa fa-star"></i></li>
                                    <li><i aria-hidden="true" class="fa fa-star"></i></li>
                                    <li><i aria-hidden="true" class="fa fa-star"></i></li>
                                </ul>
                                <p><h4> <span style="color:darkslategray;">@Html.DisplayNameFor(model => model.Name):</span><span style="color:black;">&nbsp;@Html.DisplayFor(model => model.Name)</span></h4></p>
                              @*  <p><h4> <span style="color:darkslategray;">@Html.DisplayNameFor(model => model.):</span><span style="color:black;">&nbsp;@Html.DisplayFor(model => model.Color)</span></h4></p>*@

                                <div class="product-details-content">
                                    <p><h4> <span style="color:darkslategray;">@Html.DisplayNameFor(model => model.dEs):</span><span style="color:black;text-align:center"><br />&nbsp;@Html.DisplayFor(model => model.dEs)</span></h4></p>
                                    <hr />
                                    <h4 style="text-align:center">لیست ابعاد سرستون </h4>
                                    <hr />

                                    @if (ViewBag.ListDesCount == 0)
                                    {
                                        <hr />
                                        <p>برای این سرستون ابعادی در نظر گرفته نشده است.</p>
                                    }

                                    <div>
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <td>
                                                        عرض
                                                    </td>
                                                    <td>
                                                        طول
                                                    </td>
                                                    <td>
                                                        ضخامت
                                                    </td>

                                                </tr>
                                            </thead>
                                            @*<tbody>*@
                                                @{
                                                    foreach (var item in ViewBag.ListDes)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @item.Width

                                                            </td>
                                                            <td>
                                                                @item.Height

                                                            </td>
                                                            <td>
                                                                @item.Thicnekss

                                                            </td>

                                                        </tr>
                                                    }
                                                }
                                            @*</tbody>*@
                                        </table>
                                    </div>
                                            @*<p><span>Availability:</span> In stock</p>
                    <p><span>Category:</span> Demo Products</p>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            @*btn-services-shop-now*@
            <a href="#" class="btn btn-danger" data-dismiss="modal"><span style="font-family:Tahoma">بستن</span></a>
        </div>
    </div>
</div>
