                                <img src="~/metro/img/PicGallery/@item.Image" style="width:200px;height:200px;" alt="PicGallery" />

                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="PicCollectionGalleries"  asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-controller="PicCollectionGalleries" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-controller="PicCollectionGalleries" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


