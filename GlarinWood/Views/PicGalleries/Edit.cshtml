                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
 
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.PGC)
                    {
                        <tr>
                            <td>
                             </td>
