@model GlarinWood.Models.PicCollectionGallery

@{
    ViewData["Title"] = "گالری عکس ها";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>ایجاد عکس</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-horizontal">
        @*<h4>PicCollectionGallery</h4>*@
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PicGalleryId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PicGalleryId" class ="form-control" asp-items="ViewBag.PicGalleryId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="file" name="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ایجاد" class="btn btn-success"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
