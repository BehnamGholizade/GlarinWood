@model ChangePasswordViewModel
@{
    ViewData["Title"] = "فرم تغییر گذرواژه";
}

<h4 style="text-align:center">.@ViewData["Title"]</h4>

    <hr />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2" >
                <form asp-controller="Manage" asp-action="ChangePassword" method="post"  dir="rtl">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" >
                        <label asp-for="OldPassword"  ></label>
                        
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger" ></span>
                        
                        <div></div>
                    </div>
                    <div class="form-group" >
                      
                        <label  asp-for="NewPassword" ></label>
                     
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"   ></span>
                   
                    </div>
                    <div class="form-group"  >
                        <label asp-for="ConfirmPassword"   ></label>
                
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"  ></span>
                
                    </div>
                    <div class="form-group" >
                        <div style="text-align:center"  >
                            <button type="submit" class="btn btn-success">تغییر گذرواژه</button>
                        </div>
                    </div>
                </form>
</div>
            </div>
    </div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
