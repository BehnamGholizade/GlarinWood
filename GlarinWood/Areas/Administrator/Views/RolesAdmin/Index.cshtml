@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";

}

<img src="~/Admin/img/admin_s.png" alt="admin" />


<h2>مدیریت سطوح دسترسی</h2>

<div>
    <a asp-action="Create" class="btn btn-lg btn-info">ایجاد نقش جدید</a>
</div>
<br />
<hr />
<table class="table">
    <tr>
        <th>
            @Html.Label("سطح دسترسی")
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Name != "Programer")
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                 @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }
    }

</table>
