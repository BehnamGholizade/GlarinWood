@model GlarinWood.Models.ApplicationUser

@{
    ViewBag.Title = "جزئیات";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";

}
<img src="~/Admin/img/admin_s.png" alt="admin" />


<h2>جزئیات اطلاعات</h2>

<div>
    <h4>کاربر</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("شناسه کاربری")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<h4>لیست نقش های کاربر</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>برای این کاربر نقشی یافت نگردید.</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">ویرایش</a> |
    <a asp-action="Index" class="btn btn-primary">بازگشت به لیست</a>
</div>


